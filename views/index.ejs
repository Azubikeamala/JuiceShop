<%- include('partials/header') %>
<%- include('partials/nav') %>

<div class="order-form">
    <h2>Place Your Order</h2>
    <form action="/order" method="POST">
        
        <!-- This Displays Errors -->
        <% if (Array.isArray(errors) && errors.length > 0) { %>
            <div class="error-messages">
                <% errors.forEach(function(error) { %>
                    <p class="error"><%= error %></p>
                <% }); %>
            </div>
        <% } %>

        <label for="studentName">Student Name</label>
        <input type="text" id="studentName" name="studentname" value="<%= studentname %>" />

        <label for="studentID">Student ID (XXX-XXXX)</label>
        <input type="text" id="studentID" name="studentid" value="<%= studentid %>" />

        <!-- This Selects juices -->
        <label for="mango">Mango Juice($6.99 each),</label>
        <input type="number" id="mango" name="mjuice" value="<%= mjuice %>" min="0" />

        <label for="berry">Berry Juice($5.99 each)</label>
        <input type="number" id="berry" name="bjuice" value="<%= bjuice %>" min="0" />

        <label for="apple">Apple Juice($3.99 each)</label>
        <input type="number" id="apple" name="ajuice" value="<%= ajuice %>" min="0" />

        <button type="submit">Place Order</button>
    </form>
</div>

<%- include('partials/footer') %>
